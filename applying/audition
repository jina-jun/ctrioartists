                            <script>
                                document.getElementById("audition_apply_form").addEventListener("submit", function(event) {
                                    var consentValue = document.querySelector('input[name="terms"]:checked').value;
                                    if (consentValue === "동의안함") {
                                        event.preventDefault();
                                        alert("개인정보 수집에 동의해주셔야 지원이 가능합니다.");
                                    }
                                });
