                                    <input type="text" name="phone" id="applicant_phone" placeholder="연락처를 입력하세요." required onkeypress='return checkNumber(event)'>
                                </div>
                                <script>
                                    function checkNumber(event) {
                                        if(event.key === '.' 
                                            || event.key === '-'
                                            || event.key >= 0 && event.key <= 9) {
                                            return true;
                                        }
                                        
                                        return false;
                                    }
                                </script>
                            </div>
                            <div class="group_input_items full">
                                <div class="wrap_input_item attaching_file">
